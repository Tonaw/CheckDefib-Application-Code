@model Defibrillator
<partial name="_BreadCrumbs" model=@(new [] {
    ("/","Home"),
    ("/defibrillator","Defibrillator"),
    ($"/defibrillator/details/{Model.Id}",$"{Model.Id}"),
    ("","Details")
}) />

<h3 class="my-4">Edit Defibrillator</h3>

<div class="card rounded shadow p-3">
    
    <form asp-action="Edit">

        
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        
        <!-- we hide the id as its not user editable but needs to be in the -->
        <!-- form to ensure the Defibrillator passed to the controller is complete -->    
        <input type="hidden" asp-for="Id" class="form-control"/>
      
        <div class="mt-3">
            <label asp-for="DefibName" class="form-label"></label>
            <input asp-for="DefibName" class="form-control"/>
            <span asp-validation-for="DefibName" class="text-danger"></span>
        </div>

        <div class="row mt-3">
            <div class="col">
                <label asp-for="Postcode" class="form-label"></label>
                <input asp-for="Postcode" class="form-control"/>
                <span asp-validation-for="Postcode" class="text-danger"></span>
        </div>

    
        <div class="mt-3">
            <label asp-for="Address" class="form-label"></label>
            <input asp-for="Address" class="form-control"/>
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>

      
            <div class="col">
                <label asp-for="Latitude" class="form-label"></label>
                <input asp-for="Latitude" class="form-control" readonly/>
                <span asp-validation-for="Latitude" class="text-danger"></span>
            </div>
        </div>

        <div class="mt-3">
            <label asp-for="Longitude" class="form-label"></label>
            <input asp-for="Longitude" class="form-control" readonly/>
            <span asp-validation-for="Longitude" class="text-danger"></span>
        </div>

       <div class="mt-3">
            <label asp-for="DefibType" class="control-label"><i class="bi-person-badge-fill"></i> Defibrillator Type</label>
            <select asp-for="DefibType" asp-items="Html.GetEnumSelectList<DefibType>()" class="form-control">
                <option>Select Defibrillator Type</option>
            </select>
            <span asp-validation-for="DefibType" class="text-danger"></span>
        </div>
   
        <!-- submit button and cancel link which navigates to Index action -->
        <div class="mt-3">
            <input type="submit" value="Save" class="btn btn-primary"/>
            <a class="btn btn-secondary" asp-action="Index">Cancel</a>
        </div>

    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}